<body>

<h2>Produse recomandate</h2>
<div id="products" class="grid"></div>

<script>
const csvUrl = "https://api.2performant.com/feed/3659915f8.csv";

fetch(csvUrl)
  .then(r => r.text())
  .then(text => {
    const rows = text.split("\n").map(r => r.split(","));
    rows.shift(); // eliminÄƒ header

    rows.forEach(col => {
      const title = col[1];
      const price = col[3];
      const url = col[5];
      const image = col[2];

      if (!title || !image) return;

      document.getElementById("products").innerHTML += `
        <div class="card">
          <img src="${image}">
          <h3>${title}</h3>
          <p>${price} lei</p>
          <a href="${url}" target="_blank">Vezi produsul</a>
        </div>
      `;
    });
  });
</script>

